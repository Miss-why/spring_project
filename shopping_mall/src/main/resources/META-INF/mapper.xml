<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Shopping_mall">

<!-- id중복나면 안됨 -->
<!-- choose + when 조합법 -->
<select id="search" parameterType="Map" resultType="userdao">
select * from user
<choose> <!-- choose: 여러가지 형태의 쿼리문 사용시 적용하는 태그 (where+if 문의 개선된 형태 > choose)-->
<!-- when 안정적으로 쓰려먼 40개까지 쓸 수 있음. 그러나 이렇게까지 많이 쓰지는 않음 => when이 if문이라고 생각하면 됨. when 안에 진짜 조건문(if문) 사용 가능-->
	<when test="part==1"> <!-- 아이디 찾기 -->
		where uname=#{uname} and uemail=#{uemail}
	</when>
	<when test="part==2"> <!-- 패스워드 찾기 -->
		where uid=#{uid} and upass=#{upass}
	</when>
	<otherwise>
		order by uidx desc
	</otherwise>
</choose>
</select>

</mapper>